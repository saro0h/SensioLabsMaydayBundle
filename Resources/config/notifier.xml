<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sensiolabs_mayday.notifier.chain.class">SensioLabs\Bundle\MaydayBundle\Notifier\NotifierChain</parameter>
    </parameters>

    <services>
        <service id="sensiolabs_mayday.notifier" alias="sensiolabs_mayday.notifier.chain" />
        <service id="sensiolabs_mayday.notifier.chain" class="%sensiolabs_mayday.notifier.chain.class%" />

        <service id="sensiolabs_mayday.notifier.react" class="%sensiolabs_mayday.notifier.react.class%">
            <argument type="service" id="sensiolabs_mayday.server.react" />
            <tag name="sensiolabs_mayday.notifier" />
        </service>
    </services>
</container>
