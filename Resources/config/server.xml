<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sensiolabs_mayday.server.react.class">SensioLabs\Bundle\MaydayBundle\Server\ReactServer</parameter>
    </parameters>

    <services>
        <service id="sensiolabs_mayday.server.react" class="%sensiolabs_mayday.server.react.class%">
            <argument>%sensiolabs_mayday.react_run_file_path%</argument>
            <argument>%sensiolabs_mayday.react_pid_file_path%</argument>
            <argument>%sensiolabs_mayday.react_port%</argument>
        </service>
    </services>
</container>
