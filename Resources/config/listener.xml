<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sensiolabs_mayday.listener.login.class">SensioLabs\Bundle\MaydayBundle\Listener\LoginListener</parameter>
    </parameters>

    <services>
        <service id="sensiolabs_mayday.listener.login" class="%sensiolabs_mayday.listener.login.class%">
            <argument type="service" id="security.context" />
            <argument type="service" id="doctrine" />
            <tag name="kernel.event_listener" event="security.interactive_login" />
        </service>
    </services>
</container>
